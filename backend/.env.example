# ClaimLedger Backend Environment Variables
# Copy this file to .env and fill in your values

# Database (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite:///./claimledger.db

# Arc Blockchain
ARC_RPC_URL=https://rpc.testnet.arc.network
ARC_CHAIN_ID=11124
USDC_ADDRESS=0x3600000000000000000000000000000000000000
CLAIM_ESCROW_ADDRESS=0x80794995149E5d26F22c36eD56B817CBd8E5d4Fa

# Circle API Keys (from console.circle.com)
CIRCLE_WALLETS_API_KEY=SAND_KEY_your_key_here
CIRCLE_GATEWAY_API_KEY=SAND_KEY_your_key_here
CIRCLE_APP_ID=your_app_id_here

# Google AI / Gemini
GOOGLE_AI_API_KEY=AIza_your_key_here

# Wallet Configuration
AGENT_WALLET_ADDRESS=
AGENT_WALLET_PRIVATE_KEY=
INSURER_WALLET_ADDRESS=
INSURER_WALLET_PRIVATE_KEY=

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
